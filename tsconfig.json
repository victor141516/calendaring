{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": true,
    "outDir": "dist",
    "sourceMap": false,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noImplicitReturns": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "compileOnSave": true,
  "include": ["./src/**/*.ts"]
}
